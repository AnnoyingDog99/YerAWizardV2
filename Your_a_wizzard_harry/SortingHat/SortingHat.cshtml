@{
    Page.Title = "Title goes here";
    //scholen
    int gryffindorP = 0, hufflepuffP = 0, ravenclawP = 0, slytherinP = 0, questionindex = 1;
    List<string> houses = new List<string> { "griffindor", "hufflepuff", "ravenclaw", "slytherin" };
    string winninghouse = "";
    int points = 0;
    Boolean win = false;
    //kijkt wat de antwoorden van de vragen zijn 
    for (int i = 0; i < 10; i++)
    {
        if (!Request["Q" + questionindex].IsEmpty())
        {
            string house = Request["Q" + questionindex];
            switch (house)
            {
                case "griffindor":
                    gryffindorP++;
                    break;
                case "hufflepuff":
                    hufflepuffP++;
                    break;
                case "ravenclaw":
                    ravenclawP++;
                    break;
                case "slytherin":
                    slytherinP++;
                    break;
            }
        }
        questionindex++;
    }

    //kijkt welk huis gewonnen heeft
    foreach (string house in houses)
    {

        switch (house)
        {
            case "griffindor":
                points = gryffindorP;
                break;
            case "hufflepuff":
                points = hufflepuffP;
                break;
            case "ravenclaw":
                points = ravenclawP;
                break;
            case "slytherin":
                points = slytherinP;
                break;
        }

        if (points >= gryffindorP)
        {
            if (points >= ravenclawP)
            {
                if (points >= hufflepuffP)
                {
                    if (points >= slytherinP)
                    {
                        win = true;
                    }
                }
            }

        }
        if (win == true)
        {
            winninghouse = house;
        }
        win = false;

    }



}

<div>

  <h1>je bent ingedeelt in @winninghouse</h1>
 
</div>