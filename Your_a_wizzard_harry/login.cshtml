                <form action="" method="post">
                    @Html.ValidationMessage("mail")
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><img style="max-width:26px" src="~/Images/wizard hat.png" /></span>
